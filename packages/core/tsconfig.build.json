{
	"extends": ["./tsconfig.json", "@n8n/typescript-config/tsconfig.build.json"],
	"compilerOptions": {
		"composite": true,
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/build.tsbuildinfo",
		"target": "es2022",
		"lib": ["es2022"],
		"skipLibCheck": true,
		"noImplicitAny": false,
		"strict": false,
		"noEmitOnError": false,
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["test/**", "src/**/__tests__/**"]
}
